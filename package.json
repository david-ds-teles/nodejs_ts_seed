{
	"name": "seed",
	"version": "1.0.0",
	"description": "a simple node seed project with typescript",
	"author": "David S Teles",
	"keywords": [
		"typescript",
		"node",
		"seed",
		"hexagonal"
	],
	"license": "ISC",
	"main": "app.ts",
	"scripts": {
		"build": "tslint 'src/**/*.ts' && tsc --alwaysStrict",
		"prd": "pm2 start ecosystem.config.yml --env prd",
		"stop": "pm2 stop ecosystem.config.yml",
		"restart": "pm2 restart ecosystem.config.yml",
		"del": "pm2 delete ecosystem.config.yml",
		"dev": "nodemon --watch 'src/' --exec 'ts-node src/app.ts' -e ts",
		"test": "jest",
		"lint": "tslint 'src/**/*.ts'",
		"lint-staged": "lint-staged",
		"prettier": "prettier --write */** --ignore-unknown",
		"prepare": "husky install"
	},
	"dependencies": {
		"express": "^4.17.2",
		"pm2": "^5.1.2"
	},
	"devDependencies": {
		"@types/express": "^4.17.13",
		"@types/node": "^17.0.8",
		"@types/jest": "~27.4.0",
		"jest": "~27.4.7",
		"husky": "^7.0.4",
		"lint-staged": "^12.1.7",
		"nodemon": "^2.0.15",
		"prettier": "^2.5.1",
		"ts-jest": "^27.1.2",
		"tslint": "^6.1.3",
		"tslint-config-prettier": "^1.18.0",
		"typescript": "^4.5.4"
	}
}
